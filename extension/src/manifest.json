{
  "manifest_version": 3,
  "name": "Scogo AI IT Support Assistant",
  "version": "1.0.0",
  "description": "Live IT support with AI using LiveKit",
  "permissions": [
    "identity",
    "storage",
    "tabs",
    "scripting",
    "desktopCapture",
    "offscreen"
  ],
  "host_permissions": [
    "*://localhost/*",
    "https://*.livekit.cloud/*"
  ],
  "oauth2": {
    "client_id": "${GOOGLE_OAUTH_CLIENT_ID}",
    "scopes": ["email", "profile", "openid"]
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Scogo AI IT Support Assistant"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
